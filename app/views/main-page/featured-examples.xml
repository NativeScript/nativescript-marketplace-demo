<GridLayout>
  <ScrollView>
    <Repeater items="{{ featuredExamples }}">
      <Repeater.itemsLayout>
        <WrapLayout
            margin="4"
            horizontalAlignment="left"
            itemWidth="{{ (screenWidth - 8) / 2 }}"
            itemHeight="{{ (screenWidth - 8) * 0.5 + 50 }}"/>
      </Repeater.itemsLayout>
      <Repeater.itemTemplate>
        <GridLayout>
            <GridLayout margin="4" rows="* 50" backgroundColor="white" touch="tileTouch" tap="navigateToExample" automationText="{{ title }}">
                <Image src="{{ image }}" stretch="aspectFill" />
                <Label row="1" horizontalAlignment="center" verticalAlignment="center" text="{{ title }}" />
            </GridLayout>
        </GridLayout>
      </Repeater.itemTemplate>
    </Repeater>
  </ScrollView>
</GridLayout>