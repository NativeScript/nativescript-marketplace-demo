<GridLayout xmlns:chart="nativescript-telerik-ui/chart" rows="auto,*">
    <Label text="Monthly sales revenue, 2014" cssClass="chart-example-tytle-style"/>
    <chart:RadCartesianChart row="1" id="chart" selectionMode="Single">
        <chart:RadCartesianChart.horizontalAxis>
            <chart:CategoricalAxis />
        </chart:RadCartesianChart.horizontalAxis>
        <chart:RadCartesianChart.verticalAxis>
            <chart:LinearAxis />
        </chart:RadCartesianChart.verticalAxis>
        <chart:RadCartesianChart.series>
            <chart:SplineAreaSeries categoryProperty="Category" items="{{ areaSource }}" stackMode="Stack100" valueProperty="Amount" selectionMode="Series"/>
            <chart:SplineAreaSeries categoryProperty="Category" items="{{ areaSource2 }}" stackMode="Stack100" valueProperty="Amount" selectionMode="Series"/>
        </chart:RadCartesianChart.series>
        <chart:RadCartesianChart.grid>
            <chart:RadCartesianChartGrid horizontalLinesVisible="true"/>
        </chart:RadCartesianChart.grid>
    </chart:RadCartesianChart>
</GridLayout>
