<examples:ExamplePage
        navigatingTo="pageNavigatingTo"
        xmlns:examples="examples/example-base-page"
        xmlns="http://www.nativescript.org/tns.xsd">
    <Page.actionBar>
        <ActionBar title="Pie series" automationText="ActionBar">
            <NavigationButton icon="res://ic_back" tap="goBack" automationText="GoBack" />
            <Android>
                <ActionItem id="exampleMenuButton" icon="res://ic_menu_example" automationText="ExampleMenu" />
            </Android>
            <iOS>
                <ActionItem id="exampleMenuButton" ios.position="right" automationText="ExampleMenu">
                    <ActionItem.actionView>
                        <Image src="res://ic_menu_example" width="22" height="22" margin="0, -11, 0, 11" />
                    </ActionItem.actionView>
                </ActionItem>
            </iOS>
        </ActionBar>
    </Page.actionBar>
    <GridLayout loaded="rootGridLoaded" rows="auto, *">
        <GridLayout class="repeaterItemsScrollerStyle" rows="*">
            <GridLayout class="repeaterBottomBorderStyle" row="1"/>
            <ScrollView id="scrollView" orientation="horizontal" ios.showsHorizontalScrollIndicator="false" class="galleryRepeaterStyle" loaded="scrollViewLoaded">
                <Repeater items="{{ pieTypes }}" >
                    <Repeater.itemsLayout>
                        <StackLayout orientation="horizontal"/>
                    </Repeater.itemsLayout>
                    <Repeater.itemTemplate>
                        <GridLayout tap="repeaterItemTap" columns="*" rows="*,auto" class="{{ isSelected ? 'chartItemInRepeaterSelectedStyle' : 'chartItemInRepeaterStyle' }}">
                            <Image src="{{ imageRes }}" col="0" row="0" stretch="none" horizontalAlignment="center" verticalAlignment="center" />
                            <GridLayout col="0" row="1" class="{{ isSelected ? 'galleryRepeaterItemBottomSelectedBorder' : 'galleryRepeaterItemBottomBorder'}}"/>
                        </GridLayout>
                    </Repeater.itemTemplate>
                </Repeater>
            </ScrollView>
        </GridLayout>
        <GridLayout class="chartExampleHolderStyle" id="exampleHolder" row="1" rows="*"></GridLayout>
    </GridLayout>
</examples:ExamplePage>
