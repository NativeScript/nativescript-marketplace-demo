<GridLayout rows="auto, *" xmlns:chart="nativescript-telerik-ui/chart">
    <Label text="Energy consumption, 2016/2017" cssClass="chart-example-tytle-style" textWrap="true"/>
    <chart:RadPieChart row="1" selectionMode="Single" margin="20">
        <chart:RadPieChart.series>
            <chart:PieSeries showLabels="true" selectionMode="DataPoint" expandRadius="1.1" outerRadiusFactor="0.8" items="{{ pieSource2 }}" valueProperty="Amount" legendLabelProperty="Company">
                <chart:PieSeries.labelStyle>
                    <chart:PointLabelStyle  margin="-55" textFormat="%3.0f%%" textColor="White" textSize="10"  />
                </chart:PieSeries.labelStyle>
            </chart:PieSeries>
        </chart:RadPieChart.series>
        
        <chart:RadPieChart.legend>
            <chart:RadLegendView position="Top" title="" height="150"/>
        </chart:RadPieChart.legend>
        
    </chart:RadPieChart>
</GridLayout>
